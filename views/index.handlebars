<div class="row">
    <div class="col-md-6">
        <h2 class="words">You have CREATED:</h2>

        <ul class="list-group center">
            {{#each dbBurger}}
            {{#unless devoured}}
            <li class="list-group-item answer">
                <p>                 
                    <form action="burgers/update/{{id}}?_method=PUT" method="POST">
                        <input type="hidden" name="id" value="{{id}}">
                        
                       {{title}} <button type="submit" class="btn btn-danger" id="{{id}}">Devour!</button>
                    </form>
                </p>
            </li>
            {{/unless}}
            {{/each}}
        </ul>

    </div>
    <div class="col-md-6">
        <h2 class="words">You have DEVOURED:</h2>
        <ul class="list-group center">
            {{#each dbBurger}}
            {{#if devoured}}
            <li class="list-group-item answer">
                <p>
                    {{title}}
                </p>
            </li>
            {{/if}}
            {{/each}}
        </ul>
        <!--<form action="burgers/delete/{{id}}?_method=DELETE" method="POST">
<button type="submit" class="btn btn-danger delete" id="delete">Clear Devoured!</button>
        </form>-->
    </div>
</div>